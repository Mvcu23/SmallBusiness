<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#b46529"
    tools:context="com.example.android.smallbusiness.Main">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="U And DeCiBaL"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="#FFF"
        android:paddingTop="5dp" />
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share music == Make fusions !!!!"
        android:textSize="19sp"
        android:layout_below="@id/logo"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#eacb1c"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map"
        android:adjustViewBounds="true"
        android:maxWidth="49dp"
        android:maxHeight="49dp"
        android:scaleType="fitCenter"
        android:layout_above="@+id/url"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:id="@+id/fusion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fusion"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/ContactInfo"
        android:layout_alignBottom="@id/fusion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:text="Google Us "
        android:textSize="19sp"
        />
    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.google.com"
        android:linksClickable="true"
        android:paddingBottom="5dp"
        android:autoLink="web"
        android:textSize="19sp"
        android:paddingLeft="5dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/ContactInfo"
        android:layout_alignBottom="@id/fusion"/>

    <TextView
        android:id="@+id/map"
        android:layout_above="@id/ContactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Map Location"
        android:paddingBottom="30dp"
        android:textSize="19sp"

        />

</RelativeLayout>
